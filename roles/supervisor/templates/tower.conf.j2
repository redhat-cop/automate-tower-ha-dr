[unix_http_server]
chown = awx:awx

[supervisord]
umask = 022
minfds = 4096

[program:awx-celeryd]
command = {{ awx_install_home }}/venv/awx/bin/celery worker -A awx -l DEBUG -B --autoscale={{celery_autoscale}} -Ofair -s {{ supervisor_awx_home }}/beat.db -n celery@{{ rabbitmq_supervisord_host }}
directory = {{ supervisor_awx_home }}
environment = {% if sup_celery_add_lang|default(false) %}LANGUAGE="en_US.UTF-8",LANG="en_US.UTF-8",LC_ALL="en_US.UTF-8",LC_CTYPE="en_US.UTF-8",{% endif %}HOME="{{ awx_install_home }}",USER="{{ aw_user }}"
user = {{ aw_user }}
autostart = true
autorestart = true
stopwaitsecs = 5
redirect_stderr=true
stdout_logfile = /var/log/supervisor/awx-celeryd.log
stdout_logfile_maxbytes = 10MB
stdout_logfile_backups = 10

[program:awx-celery-watcher]
command = /usr/bin/awx-manage watch_celery
directory = /var/lib/awx
environment = LANGUAGE="en_US.UTF-8",LANG="en_US.UTF-8",LC_ALL="en_US.UTF-8",LC_CTYPE="en_US.UTF-8"
autostart = true
autorestart = true
stopwaitsecs = 5
redirect_stderr=true
stdout_logfile = /var/log/supervisor/awx-celeryd-watcher.log
stdout_logfile_maxbytes = 10MB
stdout_logfile_maxbytes=0

[program:awx-callback-receiver]
command = /usr/bin/awx-manage run_callback_receiver
directory = {{ supervisor_awx_home }}
user = {{ aw_user }}
autostart = true
autorestart = true
stopwaitsecs = 5
redirect_stderr=true
stdout_logfile = /var/log/supervisor/awx-callback-receiver.log
stdout_logfile_maxbytes = 10MB
stdout_logfile_backups = 10

[program:awx-channels-worker]
command = /usr/bin/awx-manage runworker --only-channels websocket.*
directory = {{ supervisor_awx_home }}
user = {{ aw_user }}
autostart = true
autorestart = true
stopwaitsecs = 5
redirect_stderr = true
stdout_logfile = /var/log/supervisor/awx-channels-worker.log
stdout_logfile_maxbytes = 10MB
stdout_logfile_backups = 10

[program:awx-uwsgi]
command = {{ supervisor_awx_home }}/venv/awx/bin/uwsgi --socket 127.0.0.1:8050 --module=awx.wsgi:application --vacuum --processes=5 --harakiri=120 --no-orphans --master --max-requests=1000 --lazy-apps -b 32768 --stats /var/lib/awx/uwsgi.stats --chmod-socket=660
directory = {{ supervisor_awx_home }}
user = {{ aw_user }}
autostart = true
autorestart = true
stopwaitsecs = 15
stopsignal = INT
redirect_stderr = true
stdout_logfile = /var/log/supervisor/awx-uwsgi.log
stdout_logfile_maxbytes = 10MB
stdout_logfile_backups = 10

[program:awx-daphne]
command = {{ supervisor_awx_home }}/venv/awx/bin/daphne -b 127.0.0.1 -p 8051 awx.asgi:channel_layer
directory = {{ supervisor_awx_home }}
user = {{ aw_user }}
autostart = true
autorestart = true
stopwaitsecs = 5
redirect_stderr = true
stdout_logfile = /var/log/supervisor/awx-daphne.log
stdout_logfile_maxbytes = 10MB
stdout_logfile_backups = 10

[group:tower-processes]
programs=awx-celeryd,awx-celery-watcher,awx-callback-receiver,awx-channels-worker,awx-uwsgi,awx-daphne
priority=5

[eventlistener:exit-event-listener]
command=/usr/bin/failure-event-handler
stderr_logfile = /var/log/supervisor/failure-event-handler.stderr.log
stderr_logfile_maxbytes = 10MB
stderr_logfile_backups = 10
buffer_size = 50
events=PROCESS_STATE
priority=0

